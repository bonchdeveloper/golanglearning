package main // указываем пакет, где находится файл

import "fmt" // импортирование библиотеки

func main() { // точка входа в программу
	num := 3
	if num == 3 { // условный оператор if = если 
		fmt.Println("Число равное 3!!!")
	} else if num < 0 {
		fmt.Println("Число меньше нуля")
	} else if num > 0 {
		fmt.Println("Число больше нуля")
	}
}
